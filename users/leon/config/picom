# vim: filetype=conf

backend = "glx";
xrender-sync-fence = true;

glx-no-stencil = true;
vsync = true;

# Only apply rounded corners to Polybar, interferes with bspwm corner radius and highlight rendering.
corner-radius = 10;
rounded-corners-exclude = [
 "! class_g = 'Polybar' && ! class_g = 'Rofi'"
];

shadow = true;
shadow-radius = 20;
shadow-offset-x = -16;
shadow-offset-y = -16;
shadow-opacity = 0.8;
shadow-exclude = [
 "! name~=''",
];

inactive-dim = 0.2;
inactive-opacity = 0.95;
active-opacity = 1;
frame-opacity = 1;
inactive-opacity-override = false;

detect-client-opacity = true;

opacity-rule = ["100:class_g = 'Rofi'"];

wintypes:
{
  tooltip = { fade = true; shadow = true; opacity = 1.0; };
  popup_menu = { opacity = 1.0  }
  dropdown_menu = { opacity = 1.0  }
};
